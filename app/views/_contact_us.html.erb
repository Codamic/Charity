<div id="contact" class="padding">
  <div class="container">
    <div class="section-title">
      <h1>Contact Us</h1>
    </div>
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
	<div class="row contact-details">
	  <div class="col-sm-4">
	    <span><i class="fa fa-map-marker"></i></span>
	    <p class="contact-info">Karaj</p>
	  </div>
	  <div class="col-sm-4">
	    <span><i class="fa fa-phone"></i></span>
	    <p class="contact-info">+ </p>
	  </div>
	  <div class="col-sm-4">
	    <span><i class="fa fa-envelope"></i></span>
	    <a class="contact-info" href="#">charity@codamic.tech</a>
	  </div>
	</div>
	<div class="contact-form">
          <%= form_for @message, html: {class: "contact-form", id: "contact-form", name: "contact-form"} do |f|%>
	    <div class="row">
	      <div class="col-sm-6">
		<div class="form-group">
                  <%= f.text_field :name, class: "form-control", required: "required", placeholder: "Name" %>
		</div>
		<div class="form-group">
                  <%= f.text_field :company, class: "form-control", placeholder: "Company"%>
		</div>
	      </div>
	      <div class="col-sm-6">
		<div class="form-group">
                  <%= f.text_field :email, class: "form-control", required: "required", placeholder: "Email Address" %>
		</div>
		<div class="form-group">
                  <%= f.text_field :website, class: "form-control", required: "required", placeholder: "Website"%>
		</div>
	      </div>
	      <div class="col-sm-12">
		<div class="form-group">
                  <%= f.text_area :message, id: "message", required: "required", class: "form-control", rows: "8", placeholder: "Message" %>

		</div>
	      </div>
	    </div>
	    <div class="form-group">

	      <button type="submit" class="btn btn-primary">Send Your Message</button>
	    </div>
            <% end %>
	</div>
      </div>
    </div>
  </div>
</div><!--/#Contact-->

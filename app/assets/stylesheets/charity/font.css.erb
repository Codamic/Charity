/*Font css*/

@font-face {
    font-family: 'allerregular';
    src: url('<%= font_path "aller_rg-webfont.eot" %>');
    src: url('<%= font_path "aller_rg-webfont.eot?#iefix" %>') format('embedded-opentype'),
         url('<%= font_path "aller_rg-webfont.woff" %>') format('woff'),
         url('<%= font_path "aller_rg-webfont.ttf" %>') format('truetype'),
         url('<%= font_path "aller_rg-webfont.svg#allerregular" %>') format('svg');
    font-weight: normal;
    font-style: normal;
}

@media screen and (-webkit-min-device-pixel-ratio:0) {
    @font-face {
        font-family: 'allerregular';
        src: url('<%= font_path "aller_rg-webfont.svg#allerregular" %>') format('svg');
    }
}

